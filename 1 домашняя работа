def numbers1(modes: str = "abc"):
    numbers = []
    while True:
        line = input("Введите число: ")
        if line == "":
            break
        numbers.append(int(line))
    if "a" in modes:
        print("Введенная последовательность чисел",  numbers )
    if "b" in modes:
        print("Сумма введенных чисел", sum(numbers))
    if "c" in modes:
        print("Самое большое число из введенных", max(numbers))
numbers1()
